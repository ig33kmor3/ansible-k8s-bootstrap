apiVersion: kubeadm.k8s.io/v1beta2
kind: JoinConfiguration
discovery:
  bootstrapToken:
    apiServerEndpoint: {{ endpoint }}
    token: {{ token }}
    unsafeSkipCAVerification: true
    caCertHashes: 
    - "{{ ca }}"
  timeout: 5m0s
  tlsBootstrapToken: {{ token }}
nodeRegistration:
  kubeletExtraArgs:
    cloud-provider: external